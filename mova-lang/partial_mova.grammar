expression     → literal
               | unary
               | binary
               | grouping ;

literal        → NUMBER | STRING | "істина" | "хиба" | "ніщо" ;
grouping       → "(" expression ")" ;
unary          → ( "-" | "!" ) expression ;
binary         → expression operator expression ;
operator       → "==" | "!=" | "<" | "<=" | ">" | ">="
               | "+"  | "-"  | "*" | "/" ;